  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "args": ["${workspaceFolder}/packages/server/src/main.ts"],
      "program": "${workspaceFolder}/packages/server/src/main.ts",
      "envFile": "${workspaceFolder}/packages/server/.env",
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "runtimeExecutable": "node"
    }
  ]
}
